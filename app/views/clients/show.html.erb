<body class="bg-success p-2 text-dark bg-opacity-10">
  <div class="container d-flex align-items-center justify-content-center max-w-50 -sm">
    <div class="card mb-3 card border-success mb-3 border border-3 " style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="https://img1.freepng.es/20180809/qvb/kisspng-delta-computers-rentals-clip-art-computer-icons-photo-icons-matt-symbol-png-image-picpng-5b6ce7aa28da27.9546927915338638501673.jpg" class="img-fluid rounded-start" alt="..." width= 600px>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= @client.first_name.concat(" #{@client.last_name}") %></h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
            <div>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </p>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to("Back to all Clients", clients_path, class: "btn btn-success opacity-90") %>
      <%= link_to("Edit", edit_client_path, class: "btn btn-success opacity-90") %>
      <%= link_to "Add car", new_client_car_path(client_id: @client.id), class: "btn btn-success opacity-90" %>
    </div>
    </div>
  </div>



  <div class="container d-flex justify-content-center">

    <% @client.cars.each do |car| %>
    <div class="card mb-3 border-success mb-3 border border-3" style="max-width: 10rem; display: inline-block; margin-right: 30px;">
      <img src="https://cdn.shopify.com/s/files/1/0518/0309/5239/products/lamborghini-veneno-remote-controlled-car-orange-852_800x.jpg?v=1677109651" class="card-img-top" alt="Car Image">
      <div class="card-body">
        <h5 class="card-title"><%= car.brand %></h5>
        <p class="card-text"><strong>Model:</strong> <%= car.model %></p>
        <%= link_to "Delete", car_path(car),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
      </div>
    </div>
    <% end %>
  </div>
</body>
