<br>
<div class="container-sm ">
  <div class="border border-secondary border border-2 bg-success p-2 text-white bg-opacity-85">
    <div class="text-center p-3 mb-2">
      <h1>Our Clients</h1>
    </div>
  </div>
  <table class=" table table-striped table-hover text-center border border-secondary bg-success p-2 text-dark bg-opacity-10 ">
    <thead class=" bg-success p-2 text-success bg-opacity-25 ">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody >
      <% @clients.each do |client| %>
        <tr>
          <td><%=client.first_name %></td>
          <td><%=client.last_name %></td>
          <div>
            <td class="link-success" ><%= link_to "Show", client, class: "link-success" %></td>
            <td><%= link_to "Delete",client_path(client.id),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link-success"%></td>
          </div>

        </tr>
      <% end %>
    </tbody>
  </table>
  <p><%= link_to("Add a new client ", new_client_path, class: "btn btn-success opacity-90" ) %></p>
</div>
